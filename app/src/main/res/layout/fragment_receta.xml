<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen principal -->
    <ImageView
        android:id="@+id/item_img"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/macarrones"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sombra sobre la imagen -->
    <ImageView
        android:id="@+id/shade"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="@drawable/image_btm_overlay"
        app:layout_constraintBottom_toBottomOf="@id/item_img"
        app:layout_constraintStart_toStartOf="@id/item_img"
        app:layout_constraintEnd_toEndOf="@id/item_img"
        android:scaleType="fitXY" />

    <!-- Bot칩n atr치s -->
    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/card_back_btn"
        android:padding="4dp"
        android:src="@drawable/back_icon"
        app:layout_constraintTop_toTopOf="@id/item_img"
        app:layout_constraintStart_toStartOf="@id/item_img" />

    <!-- Bot칩n favorito -->
    <ImageButton
        android:id="@+id/btnFavorite"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_favorite_border"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="@id/item_img"
        app:layout_constraintEnd_toEndOf="@id/item_img" />

    <!-- FAB de opciones -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/vertical_dots"
        app:iconTint="@color/white"
        app:backgroundTint="@color/orange"
        android:text="@string/options"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Men칰 de opciones -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/optionsMenu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/fabOptions"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/modify"
                android:textColor="@color/black"
                android:drawablePadding="3dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:iconGravity="start"
                app:iconSize="30dp"
                app:iconTint="@color/black"
                app:icon="@drawable/ic_edit"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textColor="@color/black"
                android:drawablePadding="3dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:iconGravity="start"
                app:iconSize="30dp"
                app:iconTint="@color/black"
                app:icon="@drawable/ic_delete"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/share"
                android:textColor="@color/black"
                android:drawablePadding="3dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:iconGravity="start"
                app:iconSize="30dp"
                app:iconTint="@color/black"
                app:icon="@drawable/ic_share"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Contenedor con fondo redondeado superior -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/card_recipe"
        android:translationY="-12dp"
        app:layout_constraintTop_toBottomOf="@id/item_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- T칤tulo y rating -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tittle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:text="@string/i_am_sample_tittle"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1"
                        android:isIndicator="false"/>

                    <TextView
                        android:id="@+id/tvAverageRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="0.0"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvRatingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="(0)"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Tiempo + dificultad -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/clock"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/clock_icon"
                        app:tint="#019267" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@string/_30_minutos" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/bars"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/bars"
                        app:tint="#019267" />

                    <TextView
                        android:id="@+id/difficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/difficulty_medium" />
                </LinearLayout>

                <!-- Botones ingredientes/pasos -->
                <LinearLayout
                    android:id="@+id/buttonToggle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/ing"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custombutton"
                        android:text="@string/ingredients"
                        android:textColor="@color/orange"
                        android:fontFamily="@font/poppins" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/step"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custombutton"
                        android:text="@string/steps"
                        android:textColor="@color/orange"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>

                <!-- Ingredientes -->
                <ScrollView
                    android:id="@+id/ing_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/ingData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:text="游릭 Ingredient 1\n游릭 Ingredient 2" />
                </ScrollView>

                <!-- Pasos -->
                <ScrollView
                    android:id="@+id/step_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/step_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="10dp"
                        android:textSize="15sp" />
                </ScrollView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
